{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true
  },
  "include": ["*.ts", "bin/*.ts", "src/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules"],
  "typeRoots": ["node_modules/@types"],
  "lib": ["es2016", "dom"]
}
